# If directory exists they will be added to the path env variable
declare -a dir_path
dir_path=(
  "$HOME/dotfiles/bin"
  "$HOME/.local/bin"
  "/usr/local/go/bin"
  "$GOPATH/bin"
  "$CARGO_HOME/bin"
  "$ANDROID_HOME/tools"
  "$ANDROID_HOME/tools/bin"
  "$ANDROID_HOME/emulator"
  "$ANDROID_HOME/platform-tools"
  "$GRADLE_HOME/bin"
)

for dir in ${(k)dir_path[@]}
do
  if [ -d ${dir} ]; then
    PATH="$PATH:${dir}"
  fi
done

unset dir_path

export PATH

